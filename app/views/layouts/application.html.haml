%html{html_attrs('en-US')}
  %head
    %title= yield :page_title
    %link{ :rel => "shortcut icon", :href => 'http://www.juggernautguild.com/favicon.ico'}/
    = stylesheet_link_tag 'http://www.juggernautguild.com/public/min/index.php?f=public/style_css/css_4/calendar_select.css,public/style_css/css_4/ipb_styles.css,public/style_css/css_4/ipb_editor.css,public/style_css/css_4/juggernaut.css'
    = stylesheet_link_tag 'application'
    %script{ :src => 'http://www.google.com/jsapi' }
    :javascript
      google.load('jquery', '1.3.2');
  %body.apply{ :id => "#{controller.controller_name}_root" }
    %noscript
      .error
        %span This site makes extensive use of JavaScript. Please enable it to continue.
    #ipbwrapper
      %h1= yield :page_title
      
      %p#content_jump
        %a#top{ :name => 'top' }
        %a{ :href => '#j_content', :title => 'Jump to content', :accesskey => 'm' }Jump to content
        
      / - if admin?
      /   #admin_bar
      /     %p.right= link_to('Log in to your Admin CP &gt;', 'http://www.juggernautguild.com/a__dmin/index.php')
      /     %strong Mod Tools:
      /     %ul#mod_tools
      /       %li= link_to('IP Lookup', 'http://www.juggernautguild.com/index.php?app=core&amp;module=usercp&amp;tab=members&amp;area=mod_ipaddress', :title => 'IP Lookup')
      /       %li= link_to('Manage Announcement', 'http://www.juggernautguild.com/index.php?app=core&amp;module=usercp&amp;tab=forums&amp;area=mod_announcements', :title => 'Manage Announcement')

      #header
        #branding
          #user_bar
            / - unless current_user.nil?
            /   #user_navigation.logged_in
            /     #user_links
            /       = link_to("Signed in as #{current_user.name}", "http://www.juggernautguild.com/user/#{current_user.member_id}-#{current_user.name.downcase}/")
            /       - unless current_user.member.nil?
            /         = link_to('My Standing', member_path(current_user.member))
            /       = link_to_login_or_logout
            /       %br.clear
            / - else
            /   #user_navigation.not_logged_in
            /     #user_links
            /       = link_to_login_or_logout
            /       = link_to(image_tag('http://www.juggernautguild.com/public/style_images/splat/paste_plain.png', :alt => '') + ' Register', 'http://www.juggernautguild.com/index.php?app=core&module=global&section=register')
            /       = link_to(image_tag('http://www.juggernautguild.com/public/style_images/splat/help.png', :alt => '') + ' Help', 'http://www.juggernautguild.com/index.php?app=core&module=help')
          = link_to(image_tag('http://www.juggernautguild.com/public/style_images/4_Banner_1_copy.png', :alt => 'Logo'), 'http://www.juggernautguild.com/', :title => 'Go to board index', :rel => 'home', :accesskey => '1')
        #nav_container
          #nav_con_left
            #nav_con_right
              #search
                / TODO: Search field
              #primary_nav
                %ul
                  %li#nav_home= link_to(content_tag(:span, 'News'), 'http://www.juggernautguild.com/', :title => 'Homepage', :rel => 'home')
                  %li#nav_discussion= link_to(content_tag(:span, 'Forums'), 'http://www.juggernautguild.com/index', :title => 'Go to Forums')
                  %li#nav_about= link_to(content_tag(:span, 'About Us'), 'http://www.juggernautguild.com/topic/13476-about-us/')
                  %li#nav_joining= link_to(content_tag(:span, 'Joining'), 'http://www.juggernautguild.com/topic/13475-joining/')
                  %li#nav_roster= link_to(content_tag(:span, 'Roster'), 'http://www.wowarmory.com/guild-info.xml?r=Mal%27Ganis&amp;gn=Juggernaut')
                  %li#nav_logs= link_to(content_tag(:span, 'Logs'), 'http://www.worldoflogs.com/guilds/180/')
                  %li#nav_lf.active= link_to(content_tag(:span, 'LF'), 'http://lf.juggernautguild.com/')
                  %li#nav_calendar= link_to(content_tag(:span, 'Calendar'), 'http://www.juggernautguild.com/calendar/', :title => 'Go to Calendar')
                  %li#nav_search= link_to(content_tag(:span, 'Search'), 'http://www.juggernautguild.com/index.php?app=core&amp;module=search', :title => '', :accesskey => '4', :rel => 'search')
      %div.content.clear
        %a#j_content{ :name => 'j_content' }
        #sec_nav_con
          #sec_nav_left
            #sec_nav_right
              #secondary_nav
                %ul#breadcrumb.left
                  = yield :breadcrumb
                %ul#section_links.right
                  / %li.first= link_to 'Index', root_path, :class => ( current_page?(root_path) ) ? 'selected' : ''
                  / %li= link_to_controller(Achievement)
                  / %li= link_to_controller(Member)
                  / %li= link_to_controller(Raid, :admin_only => true)
                  / %li= link_to_controller(Item)
                  / %li= link_to_controller(Loot, :admin_only => true)
                  / %li.last= link_to_controller(Wishlist, :admin_only => true)
                %br.clear
        #content.clear
          - if flash[:error]
            %div.message.error= flash[:error]
          - if flash[:message]
            %div.message.success= flash[:message]
            
          %h2.hide= controller.controller_name.titlecase
          
          #board_index.clearfix
            #categories.hover_rows.no_sidebar.clearfix
              = yield
          
          / %ul#stat_links.filter_bar.rounded
          
          #board_statistics.statistics.general_box.clearfix.hide
            #stats
              %h2
          
          %br.clear
          
          #footer_utilities.clearfix.clear.hide
          
          #board_footer
            %ul#utility_links.left
              %li= link_to('Back to top', '#top', :title => 'Go to top')
              %li= link_to('Forum Home', 'http://www.juggernautguild.com/index', :title => 'Forum Home')
            %p#copyright.right
              = "Powered by #{link_to('Ruby on Rails', 'http://rubyonrails.org/')}"
              %br
              = "Hosted by #{link_to('NetworkRedux', 'http://www.networkredux.com/')}"
            %br.clear
            
          #stats_div